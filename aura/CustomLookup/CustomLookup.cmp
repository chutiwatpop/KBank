<aura:component controller="CustomLookUpController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global">
    <!--declare attributes--> 
    <aura:attribute name="selectedRecord" type="sObject" default="{}" description="Use,for store SELECTED sObject Record"/>
    <aura:attribute name="listOfSearchRecords" type="List" description="Use,for store the list of search records which returns from apex class"/>
    <aura:attribute name="SearchKeyWord"            type="string"/>
    <aura:attribute name="objectAPIName"            type="string" default=""/>
    <aura:attribute name="queryField"               type="string" default=""/>
    <aura:attribute name="IconName"                 type="string" default=""/>
    <aura:attribute name="label"                    type="string" default=""/>
    <aura:attribute name="Message"                  type="string" default=""/>
    <aura:attribute name="queryCondition"           type="string" default=""/>
    <aura:attribute name="placeholder"              type="string" default="Search..."/>
    <aura:attribute name="isRequired"               type="boolean" default="false"/>
    <aura:attribute name="canNewRecord"             type="boolean" default="false"/>
    <aura:attribute name="newRecordLabel"           type="String"  default="Record"/>
    <aura:attribute name="primaryFieldAPIName"      type="string"  default="Name"/>
    <aura:attribute name="secondaryFieldAPIName"    type="string"/>
    <aura:attribute name="primaryFieldLabel"        type="String"/>
    <aura:attribute name="secondaryFieldLabel"      type="String"/>
    <aura:attribute name="isOpportunityCustomSubField"  type="Boolean" default="false"/>
    <aura:attribute name="isCalledFromVFPage"    type="boolean" default="false"/>
    <aura:attribute name="selectedLabel" type="string"/>
    <aura:attribute name="searchField" type="string" default="Name"/>
    <aura:attribute name="helpText" type="string" default=""/>
    <aura:registerEvent name="handleRemoveRecord"   type="c:DmlEvent"/>
    <aura:registerEvent name="handleNewRecord"      type="c:DmlEvent"/>
    <aura:registerEvent name="lightningAppExternalEvent" type="c:selectedsObjectRecordEventForVFPage" />
    <aura:handler name="oSelectedRecordEvent" event="c:selectedsObjectRecordEvent" action="{!c.handleComponentEvent}"/>
    <aura:method name="oSelectedRecordMethod" action="{!c.handleComponentMethod}" access="PUBLIC">
        <aura:attribute name="objectName" type="String"/> 
        <aura:attribute name="selectedRecord" type="Object" /> 
    </aura:method>
       
    <div onmouseleave="{!c.onblur}" aura:id="searchRes" class="slds-form-element slds-lookup slds-is-close" data-select="single">
        <aura:if isTrue="{!v.isRequired}"><span class="required ">*</span></aura:if>
        <aura:if isTrue="{!v.label != ''}">
            <ui:outputText class="slds-form-element__label" value="{!v.label}"/>
        </aura:if>
        <aura:if isTrue="{!v.helpText != ''}">
            <lightning:helptext class="help-text" content="{!v.helpText}"/>
        </aura:if>
        <!--This part is for display search bar for lookup-->  
        <div class="slds-form-element__control">
            <div class="slds-input-has-icon slds-input-has-icon--right"> 
                <div aura:id="searchIcon" class="slds-show">
                    <lightning:icon class="slds-input__icon slds-show" iconName="utility:search" size="x-small" alternativeText="search"/> 
                </div>
                <!-- This markup is for when an record is selected -->
                <div aura:id="lookup-pill" class="slds-pill-container slds-hide">
                     <lightning:pill class="pillSize" label="{!v.selectedLabel}" name="{!v.selectedLabel}" onremove="{!c.clear}">
                          <aura:set attribute="media">
                             <lightning:icon iconName="{!v.IconName}" size="x-small" alternativeText="{!v.IconName}"/>
                          </aura:set>
                      </lightning:pill>
                </div>
                <div aura:id="lookupField" class="slds-show">
                    <span class="slds-icon_container slds-combobox__input-entity-icon">
                        <lightning:icon class="slds-icon slds-icon slds-icon_small slds-icon-text-default" iconName="{!v.IconName}" size="x-small" alternativeText="icon"/>
                        <span class="slds-assistive-text"></span>
                    </span>
                    <ui:inputText required="{!v.isRequired}" click="{!c.onfocus}" updateOn="keyup" keyup="{!c.keyPressController}" class="slds-lookup__search-input slds-input leftPaddingClass" value="{!v.SearchKeyWord}" placeholder="{!v.placeholder}"/>
                </div>
            </div>
        </div>
        <!--This part is for Display typehead lookup result List-->  
        <ul style="min-height:40px;margin-top:0px !important;overflow:auto;max-height:250px;z-index: 10; !important;" class="slds-listbox slds-listbox_vertical slds-dropdown slds-dropdown_fluid slds-lookup__menu slds" role="listbox">
            <lightning:spinner class="slds-hide" variant="brand" size="small" aura:id="mySpinner"/>
            <center> {!v.Message}</center>
            <aura:iteration items="{!v.listOfSearchRecords}" var="singleRec">
                <c:CustomLookupResult objectAPIName="{!v.objectAPIName}" oRecord="{!singleRec}" IconName="{!v.IconName}" primaryFieldAPIName="{!v.primaryFieldAPIName}" secondaryFieldAPIName="{!v.secondaryFieldAPIName}" isOpportunityCustomSubField="{!v.isOpportunityCustomSubField}" primaryFieldLabel="{!v.primaryFieldLabel}" secondaryFieldLabel="{!v.secondaryFieldLabel}"/>
            </aura:iteration>

            <aura:if isTrue="{!v.canNewRecord}">
                <div>
                    <div class="createNew itemContainer slds-lookup__item-action--label slds-text-link--reset slds-grid slds-grid--vertical-align-center slds-truncate forceSearchInputLookupDesktopActionItem lookup__footer" onclick="{!c.newRecord}">
                        <span class="slds-icon_container slds-icon-utility-add itemIcon slds-icon slds-icon--x-small slds-m-left--x-small slds-icon-text-default slds-button__icon forceIcon">
                            <span class="lightningPrimitiveIcon">
                                <lightning:icon iconName="utility:add" size="xx-small"/>
                            </span>
                        </span>

                        <span class="itemLabel slds-truncate slds-show--inline-block slds-m-left--xx-small" title="{!v.newRecordLabel}">{!v.newRecordLabel}</span>
                    </div>
                </div>
            </aura:if>
        </ul>
    </div>
</aura:component>