<aura:component >
    <aura:attribute name="isMobile" type="Boolean" default="false"/>
    <aura:attribute name="showHeader" type="Boolean" default="true"/>
    <aura:attribute name="showContent" type="Boolean" default="true"/>
    <aura:attribute name="showFooter" type="Boolean" default="true"/>
    <aura:attribute name="isDisplayOnLoad" type="Boolean" default="true"/>
    <aura:attribute name="inputHeader" type="String"/>
    <aura:attribute name="inputContent" type="String"/>
    <aura:attribute name="inputOkButton" type="String" default="Ok"/>
    <aura:attribute name="inputCancelButton" type="String" default="Cancel"/>
    <aura:attribute name="objectId" type="String"/>
    <aura:handler name="render" value="{!this}" action="{!c.doInit}"/>
	<div role="dialog" tabindex="-1" aria-labelledby="headerContent" aura:id="Modalbox" class="{!v.isDisplayOnLoad ? 'slds-modal slds-fade-in-open' : 'slds-modal'}">
        <div class="slds-modal__container">
            <aura:if isTrue="{!v.showHeader}">
                <div class="slds-modal__header">
                    <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeModal}">
                        <lightning:icon iconName="utility:close" size="xx-small" alternativeText="close" variant="inverse"/>
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    
                    <h2 id="headerContent" class="slds-text-heading--medium">
                        {!v.inputHeader}
                    </h2>
                </div>
            </aura:if>
            <aura:if isTrue="{!v.showContent}">
                <aura:if isTrue="{!!v.showHeader}">
                    <div class="slds-modal__header slds-modal__header_empty">
                        <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeModal}">
                            <lightning:icon iconName="utility:close" size="xx-small" alternativeText="close" variant="inverse"/>
                            <span class="slds-assistive-text">Close</span>
                        </button>
                    </div>
                </aura:if>
                <div class="slds-modal__content slds-p-around--medium" id='content'>
                    <div>
                        {!v.inputContent}
                    </div>
                </div>
            </aura:if>
            <!-- <aura:if isTrue="{!v.showFooter}">
                <div class="slds-modal__footer" id='footer'>
                    <button class="slds-button slds-button_brand" onclick="{!c.gotoURL}">{!v.inputOkButton}</button>
                    <button class="slds-button slds-button_neutral" onclick="{!c.closeModal}">{!v.inputCancelButton}</button>
                </div>
            </aura:if> -->
        </div>
    </div>
    <div class="{!v.isDisplayOnLoad ? 'slds-backdrop slds-backdrop--open' : 'slds-backdrop'}" aura:id="Modalbackdrop"></div>
</aura:component>