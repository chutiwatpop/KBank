<aura:component implements="lightning:actionOverride,force:hasRecordId,force:hasSObjectName,flexipage:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" access="global" controller="RequestOwnershipController">
    <aura:attribute name="mSegment" type="String"/>
    <aura:attribute name="cmpTheme"     type="String"/>
    <aura:attribute name="displayMsg"   type="String"  default="Loading..."/>
    <aura:attribute name="colorGroup"   type="String"/>
    <aura:attribute name="isShowColor"  type="Boolean" default="false"/>
    <aura:attribute name="isError"      type="Boolean" default="false"/>
    <aura:attribute name="isLoading"    type="Boolean" default="true"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <div>
        <aura:if isTrue="{!v.isLoading}">
            <lightning:spinner alternativeText="Loading" class="bg-transparent"/>
        </aura:if>
        <!-- Error Panel -->
        <div style="text-align:center;">{!v.displayMsg}
        <aura:if isTrue="{!v.isShowColor}">
            <div style="{!'display:inline-block;width:12px;height:12px;background-color:' + v.colorGroup}"></div>
        </aura:if>
        </div>
        <aura:if isTrue="{!and(v.isError == false, v.isLoading == false)}">
            <div id="confirmSection" style="text-align:center;padding:8px;">
                <ui:button aura:id="okButton" class="button" label="Yes" press="{!c.onClickYes}"/>
                <ui:button aura:id="cancelButton" class="button" label="No" press="{!c.closeModal}"/>
            </div>
        </aura:if>
    </div>
</aura:component>