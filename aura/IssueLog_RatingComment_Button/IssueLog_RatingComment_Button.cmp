<aura:component implements="lightning:actionOverride,flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName,force:lightningQuickActionWithoutHeader" access="global" controller="IssueLogController">
	<aura:attribute name="recordId" type="Id" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
	 <!-- Define Attribute-->
    <aura:attribute name="issueLog" type="Issue_Log__c" default="{'sobjectType': 'Issue_Log__c'}"/>
    <ui:inputSelect label="Rating:" aura:id="rateSelect" value="{!v.issueLog.Rating__c}"/>
    <ui:inputTextArea aura:id="commentArea" label="Comments:" value="{!v.issueLog.Comment__c}" rows="5"/><br/>
    <div class="slds-align_absolute-center">
        <ui:button label="Save" press="{!c.saveRating}"/>
        <ui:button label="Cancel" press="{!c.cancelRating}"/>
    </div>
    
        
</aura:component>